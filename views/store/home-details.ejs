<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head") %>
  <body class="antialiased bg-[#f8f9fb]">
    <%- include("../partials/header") %>

    <!-- TOP HERO IMAGE (50% HEIGHT) -->
    <section class="w-full h-[50vh]">
      <img
        src="<%= home.image %>"
        alt="<%= home.houseName %>"
        class="w-full h-full object-cover rounded-b-3xl shadow-xl"
      />
    </section>

    <!-- CONTENT SECTION -->
    <main class="max-w-5xl mx-auto mt-10 px-4 pb-16">
      
      <!-- Title + Price -->
      <div class="flex justify-between items-start gap-4 mb-4">
        <h1 class="text-3xl lg:text-4xl font-extrabold text-gray-900">
          <%= home.houseName %>
        </h1>
        <p class="text-2xl font-bold text-[#ff385c] whitespace-nowrap">
          ₹<%= home.price %> <span class="text-gray-500 text-sm font-normal">/ night</span>
        </p>
      </div>

      <!-- Location -->
      <p class="text-gray-700 flex items-center gap-2 text-lg mb-4">
        <svg class="w-5 h-5 text-[#ff385c]" fill="currentColor" viewBox="0 0 20 20">
          <path d="M10 2a6 6 0 00-6 6c0 4.418 6 10 6 10s6-5.582 6-10a6 6 0 00-6-6zm0 8a2 2 0 110-4 2 2 0 010 4z"/>
        </svg>
        <%= home.location %>
      </p>

      <!-- Rating -->
      <div class="flex items-center text-yellow-400 gap-1 mb-6">
        <% const rating = Math.floor(Number(home.rating) || 0); %>
        <% for (let i = 0; i < 5; i++) { %>
          <svg class="w-5 h-5 <%= i < rating ? '' : 'text-gray-300' %>" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.286 3.967..."/>
          </svg>
        <% } %>
        <span class="text-sm text-gray-600 ml-2"><%= home.rating %> / 5</span>
      </div>

      <!-- Description -->
      <p class="text-gray-600 text-lg leading-relaxed mb-8">
        <%= home.description || "No description provided for this home." %>
      </p>

      <!-- Amenities Box -->
      <div class="bg-white p-6 rounded-2xl shadow-md mb-8 border border-gray-200">
        <h3 class="text-xl font-semibold mb-4 text-gray-800">Amenities</h3>
        <ul class="grid grid-cols-2 gap-3 text-gray-700">
          <li>• WiFi</li>
          <li>• AC Rooms</li>
          <li>• Parking</li>
          <li>• Breakfast</li>
          <li>• TV</li>
          <li>• 24/7 Security</li>
        </ul>
      </div>

      <!-- Favourites + Book Button -->
      <div class="flex flex-col sm:flex-row gap-4">
        <%- include("../partials/favourites", { home: home }) %>
        <button class="w-full bg-[#ff385c] text-white font-bold py-3 rounded-xl shadow-lg hover:opacity-90 transition">
          Book Now
        </button>
      </div>

    </main>
  </body>
</html>
