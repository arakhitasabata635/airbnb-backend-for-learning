<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head") %>
  <body>
    <%- include("../partials/header") %>

    <main class="p-8 min-h-[80vh] bg-gradient-to-br from-[#fff1f5] via-[#f3f4f6] to-[#e0e7ff]">

      <!-- Title -->
      <h2 class="text-3xl font-extrabold mb-12 text-center text-[#ff385c] tracking-tight">
        welcome to Airbnb Homes
      </h2>

      <ul class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-10">
        <% registerdHomes.forEach((home) => { %>

        <li
          class="bg-white rounded-2xl shadow-xl border border-gray-200
          transition-transform duration-300 hover:scale-[1.03] hover:shadow-2xl p-5"
        >
          <!-- Image -->
          <img
            src="<%= home.image %>"
            alt="<%= home.houseName %>"
            class="w-full h-48 object-cover rounded-xl shadow-sm"
          />

          <!-- Details -->
          <div class="mt-4 space-y-3">

            <h3 class="text-xl font-bold text-gray-800 truncate">
              <%= home.houseName %>
            </h3>

            <!-- Price & Location -->
            <div class="flex justify-between items-center">
              <p class="text-[#ff385c] font-bold text-lg">
                ₹<%= home.price %>
                <span class="text-gray-500 text-sm">/ night</span>
              </p>

              <!-- Rating Right side -->
              <div class="flex items-center gap-1 text-yellow-500 font-semibold">
                ⭐ <span class="text-sm text-gray-700"><%= home.rating %> / 5</span>
              </div>
            </div>

            <!-- Location with icon -->
            <p class="text-gray-600 flex items-center gap-2 text-sm">
              <svg class="w-4 h-4 text-[#ff385c]" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10 2a6 6 0 00-6 6c0 4.418 6 10 6 10s6-5.582 6-10a6 6 0 00-6-6zm0 8a2 2 0 110-4 2 2 0 010 4z"/>
              </svg>
               <span><%= home.location %></span>
            </p>
          </div>

          <!-- ✅ Book button remains as it is -->
          <div class="mt-5">
            <button
              class="w-full bg-[#ff385c] text-white font-semibold py-2 rounded-lg
              hover:bg-[#e23350] transition duration-200"
            >
              Book
            </button>
          </div>
        </li>

        <% }); %>
      </ul>
    </main>
  </body>
</html>
