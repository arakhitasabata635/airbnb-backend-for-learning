<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head") %>
  <body>
    <%- include("../partials/header") %>

    <main
      class="flex flex-col items-center justify-center min-h-[75vh]
      bg-gradient-to-br from-[#fff1f5] via-[#f3f4f6] to-[#e0e7ff] py-14 px-4"
    >
      <form
        action="/login"
        method="POST"
        class="bg-white p-10 rounded-3xl shadow-xl w-full max-w-md
        border border-[#ff385c]/30 space-y-7
        transition-transform duration-300 hover:scale-[1.02]"
      >
        <!-- Title -->
        <h1
          class="text-3xl font-extrabold text-center tracking-tight text-[#ff385c]"
        >
          Login to your account
        </h1>

        <!-- Errors -->
        <%- include("../partials/errors") %>

        <!-- Email -->
        <div class="flex flex-col gap-2">
          <label class="font-semibold text-gray-600">Email</label>
          <input
            type="email"
            name="email"
            value="<%= oldInput.email %>"
            placeholder="Enter your email"
            class="border border-gray-300 rounded-xl px-4 py-3 shadow-sm
            focus:border-[#ff385c] focus:ring-2 focus:ring-[#ff385c]/50
            text-lg bg-gray-50"
            required
          />
        </div>

        <!-- Password -->
        <div class="flex flex-col gap-2">
          <label class="font-semibold text-gray-600">Password</label>
          <input
            type="password"
            name="password"
            placeholder="Password"
            class="border border-gray-300 rounded-xl px-4 py-3 shadow-sm
            focus:border-[#ff385c] focus:ring-2 focus:ring-[#ff385c]/50
            text-lg bg-gray-50"
            required
          />
        </div>

        <!-- Button -->
        <button
          type="submit"
          class="w-full bg-[#ff385c] text-white font-bold text-lg py-3
          rounded-xl shadow-md hover:scale-105 hover:bg-[#e23350]
          transition-all duration-200"
        >
          Login
        </button>
      </form>
    </main>
  </body>
</html>
